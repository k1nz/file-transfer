{
  "name": "file-transfer-system",
  "version": "1.0.0",
  "description": "一个基于 Node.js 和 React 的文件传输系统",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "pnpm --parallel --filter server --filter client run dev",
    "dev:server": "pnpm --filter server run dev",
    "dev:client": "pnpm --filter client run dev",
    "build": "pnpm --filter client run build",
    "start": "pnpm --filter server run start",
    "clean": "pnpm --recursive run clean",
    "lint": "pnpm --recursive run lint",
    "install:all": "pnpm install"
  },
  "keywords": ["file-transfer", "nodejs", "react", "upload", "monorepo"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
